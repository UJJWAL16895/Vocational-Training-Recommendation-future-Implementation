# Production environment variables for LODA application
# IMPORTANT: Copy this file to .env and update values before deployment

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Application debug mode (set to False in production)
DEBUG=False

# Secret key for session management (CHANGE THIS!)
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=replace-with-your-secure-random-key

# Port to run the application on (used by some hosting providers)
PORT=8000